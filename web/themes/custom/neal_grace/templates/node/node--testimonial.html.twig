{#
/**
 * @file
 * Template for a Node.
 */
#}
{%
  set classes = [
  'node',
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  node.bundle|clean_class,
  node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
]
%}
<article{{ attributes.addClass(classes) }}>
  {% block content %}
    <div{{ content_attributes.addClass('text-align-center testimonial-card shadow') }}>
      <h6>{{ content.field_testimonial_quote }}</h6>
      {% if content.field_attribution_name %}
        <p class="testimonial__attribution-name">
          <strong>-{{ content.field_attribution_name|render|striptags }}</strong>
        </p>
      {% endif %}
      {% if content.field_attribution_title %}
        <p class="testimonial__attribution-title">
          <small><em>{{ content.field_attribution_title|render|striptags }}</em></small>
        </p>
      {% endif %}
    </div>
  {% endblock %}
</article>
