{#
/**
 * @file
 * Template for a Node.
 */
#}
{%
  set classes = [
  'node',
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  node.bundle|clean_class,
  node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
  'mb-6 column'
]
%}
<article{{ attributes.addClass(classes) }}>
  <div class="row">
    {% block content %}
      <div class="col-sm">
        <div class="d-flex flex-column">
          <div class="d-flex align-items-end mb-3 justify-content-between">
            <h6 class="mb-0"><small>{{ post_date }} | {{ content.field_categories.0 }}</small></h6>
            {{ content.addtoany }}
          </div>
          <h4 class="mb-3"><a href="{{ path('entity.node.canonical', {'node': node.id}) }}">{{ node.title.value }}</a></h4>
          {{ content.body }}
        </div>
      </div>
    {% endblock %}
  </div>
</article>
